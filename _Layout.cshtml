@{
    var currentPath = Context.Request.Path.Value?.ToLower();
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - Carbon Tracker</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">

    <!-- NAVBAR WITH DEDICATED BUTTONS -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/Meal/Add">
                🌱 Carbon Tracker
            </a>

            <div class="ms-auto d-flex gap-2">
                <!-- ADD MEAL BUTTON -->
                <a href="/Meal/Add"
                   class="btn @(currentPath.Contains("/meal/add")
                                       ? "btn-success"
                                       : "btn-outline-success")">
                    ➕ Add Meal
                </a>

                <!-- DASHBOARD BUTTON -->
                <a href="/Meal/Dashboard"
                   class="btn @(currentPath.Contains("/meal/dashboard")
                                       ? "btn-primary"
                                       : "btn-outline-primary")">
                    📊 Dashboard
                </a>
            </div>
        </div>
    </nav>

    <!-- PAGE CONTENT -->
    <div class="container mt-4 mb-5">
        @RenderBody()
    </div>

    <!-- FOOTER -->
    <footer class="bg-dark text-white text-center py-2 fixed-bottom">
        Carbon Emission Tracker | ASP.NET MVC
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
